{
	"routes": {
		"admin_index": {
			"path": "/admin",
			"action": "Admin::index"
		},
		"admin_login": {
			"path": "/admin/login",
			"action": "Admin::login"
		},
		"admin_login_post": {
			"path": "/admin/login",
			"action": "Admin::doLogin",
			"method": "POST"
		},
		"admin_logout": {
			"path": "/admin/logout",
			"action": "Admin::doLogout"
		},
		"admin_new_guide": {
			"path": "/admin/guide/new",
			"action": "Admin::newGuide"
		},
		"admin_edit_guide": {
			"path": "/admin/guide/edit/{title}",
			"requirements": {
				"title": "[a-z0-9-]+"
			},
			"action": "Admin::editGuide"
		},
		"admin_save_guide": {
			"path": "/admin/guide/save",
			"action": "Admin::doSave",
			"method": "POST"
		}
	}
}